<!DOCTYPE html>
html
  head
    title Voting App
    // Latest compiled and minified CSS
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
    link(href="style.css", rel='stylesheet')

  body
    nav.navbar.navbar-default.navbar-fixed-top
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href="/") Voting App
        ul.nav.navbar-nav
          li.active: a(href="/") Home
        if locals.user
          ul.nav.navbar-nav.navbar-right
            li: a(href="/logout") Logout
        else
          ul.nav.navbar-nav.navbar-right
            //
              li
              div.twitter-login-btn
                a.twitter-link(href="")
                  span.fa.fa-twitter
                  span.twitter-login-msg Log In With Twitter
            li: a(href="/login") Login


    div.head-jumbo.jumbotron.jumbotron-fluid
      div.heading.container
        h2 Voto: Awesome Voting App
        h3 What would you like to do today?
        if locals.user
          a.heading-button.btn.btn-success(href="/polls") All Polls
          a.heading-button.btn.btn-primary(href="/mypolls") My Polls
          a.heading-button.btn.btn-success(href="/newpoll") New Poll
        else
          a.heading-button.btn.btn-primary(href="/signup") SignUp
          a.heading-button.btn.btn-success(href="/polls") Vote
